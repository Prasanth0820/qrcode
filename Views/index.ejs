        <div class="glass">
            <form action="/imgdata" method="post" class="">
                <h4>Generate Your QR</h4>
                <label for="">Create a QR code image by entering your data</label>
                <input type="text" name="qrdata" required><br>
    
                <a href=""> <button type="submit">Generat Qr-Code</button></a>
            </form>
        </div>
     </div>
   
